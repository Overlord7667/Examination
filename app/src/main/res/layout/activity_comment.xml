<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_work.CommentActivity"
    android:background="@color/black"
    android:id="@+id/rootView">

    <ImageView
        android:id="@+id/imageViewComment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/commentEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#27FFFFFF"
        android:hint="Комментарий к фото"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="#75FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/saveCommentButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#72D334"
            android:text="Сохранить"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancelCommentButton"
            app:layout_constraintWidth_default="spread"/>

        <Button
            android:id="@+id/cancelCommentButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#D50000"
            android:text="Отмена"
            app:layout_constraintBottom_toBottomOf="@+id/saveCommentButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/saveCommentButton"
            app:layout_constraintWidth_default="spread"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>