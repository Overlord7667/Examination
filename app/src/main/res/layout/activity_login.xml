<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_in.LoginActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:background="#BDBABA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleLog"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Вход в личный кабинет"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/loginIn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Логин"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:background="#EFEFEF"
        android:lines="1"/>

    <EditText
        android:id="@+id/passIn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#EFEFEF"
        android:layout_marginTop="10dp"
        android:hint="Пароль"
        app:layout_constraintEnd_toEndOf="@+id/loginIn"
        app:layout_constraintStart_toStartOf="@+id/loginIn"
        app:layout_constraintTop_toBottomOf="@+id/loginIn"
        android:inputType="textPassword"
        android:lines="1"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#888888"
        android:text="Войти"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="@+id/passIn"
        app:layout_constraintStart_toStartOf="@+id/passIn"
        app:layout_constraintTop_toBottomOf="@+id/passIn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ошибка входа"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
        app:layout_constraintStart_toStartOf="@+id/buttonLogin"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#FF0600"/>

</androidx.constraintlayout.widget.ConstraintLayout>