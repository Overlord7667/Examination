<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_work.TakerWork"
    android:background="#D6EEF1">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/file_move"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/dataTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите название дела"
        android:layout_toRightOf="@+id/img"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@+id/dataTextID"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/photoID"
            android:background="#EFEFEF"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:layout_below="@+id/view1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загрузка фотографий..."
            android:layout_below="@+id/photoID"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="В деле пока нет фотографий"
            android:layout_below="@+id/text1"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text2"
        android:background="@color/black"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"/>


    <ImageButton
        android:id="@+id/addFile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/view2"
        android:background="@drawable/add_photo_alternate"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"/>

    <TextView
        android:layout_width="76dp"
        android:layout_height="52dp"
        android:layout_below="@+id/addFile"
        android:text="Добавить файл"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/addFile"
        android:layout_alignRight="@+id/addFile"/>


    <ImageButton
        android:id="@+id/tables"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/view2"
        android:background="#28FFFFFF"
        android:src="@drawable/file"
        android:layout_toRightOf="@+id/addFile"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="76dp"
        android:layout_height="52dp"
        android:layout_below="@+id/tables"
        android:text="Сформировать таблицу"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/tables"
        android:layout_alignRight="@+id/tables"/>

    <Button
        android:id="@+id/saveBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addFile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="#888888"
        android:text="Сохранить" />
</RelativeLayout>
